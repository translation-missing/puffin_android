<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/seekbarlayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView2">

        <LinearLayout
            android:paddingTop="24dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include android:id="@+id/joy" layout="@layout/emotion_seekbar_layout" />
            <include android:id="@+id/anger" layout="@layout/emotion_seekbar_layout" />
            <include android:id="@+id/sadness" layout="@layout/emotion_seekbar_layout" />
            <include android:id="@+id/shame" layout="@layout/emotion_seekbar_layout" />
            <include android:id="@+id/emptiness" layout="@layout/emotion_seekbar_layout" />
            <include android:id="@+id/fear" layout="@layout/emotion_seekbar_layout" />
            <include android:id="@+id/loneliness" layout="@layout/emotion_seekbar_layout" />
            <include android:id="@+id/disgust" layout="@layout/emotion_seekbar_layout" />
            <include android:id="@+id/boredom" layout="@layout/emotion_seekbar_layout" />
            <include android:id="@+id/fatigue" layout="@layout/emotion_seekbar_layout" />
            <include android:id="@+id/guilt" layout="@layout/emotion_seekbar_layout" />
            <include android:id="@+id/worry" layout="@layout/emotion_seekbar_layout" />
            <include android:id="@+id/desperation" layout="@layout/emotion_seekbar_layout" />
            <include android:id="@+id/confidence" layout="@layout/emotion_seekbar_layout" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
